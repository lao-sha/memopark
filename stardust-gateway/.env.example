# 星尘链 API Gateway 配置文件示例

# 服务器配置
STARDUST_GATEWAY__SERVER__HOST=0.0.0.0
STARDUST_GATEWAY__SERVER__PORT=8080
STARDUST_GATEWAY__SERVER__BODY_LIMIT=10485760
STARDUST_GATEWAY__SERVER__REQUEST_TIMEOUT=30

# Substrate 节点配置
STARDUST_GATEWAY__SUBSTRATE__WS_URL=ws://127.0.0.1:9944
STARDUST_GATEWAY__SUBSTRATE__TIMEOUT=10

# Redis 配置
STARDUST_GATEWAY__REDIS__URL=redis://127.0.0.1:6379
STARDUST_GATEWAY__REDIS__POOL_SIZE=20
STARDUST_GATEWAY__REDIS__DEFAULT_TTL=3600

# 占卜服务配置
STARDUST_GATEWAY__DIVINATION__BASE_URL=http://127.0.0.1:3001
STARDUST_GATEWAY__DIVINATION__TIMEOUT=30
STARDUST_GATEWAY__DIVINATION__RETRIES=3

# 认证配置（生产环境请更换为强密钥）
STARDUST_GATEWAY__AUTH__JWT_SECRET=your-super-secret-jwt-key-change-in-production
STARDUST_GATEWAY__AUTH__TOKEN_EXPIRY=86400

# 日志配置
STARDUST_GATEWAY__LOGGING__LEVEL=info
STARDUST_GATEWAY__LOGGING__JSON=false
